@model Nakliyat.Models.pagesHizmetEkleme
@{
    ViewBag.Title = "Yeni Hizmet Bölgesi Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section head{
    <link href="~/Areas/Admin/Content/summernote-0.8.18-dist/summernote.min.css" rel="stylesheet">
    <script src="~/Areas/Admin/Content/summernote-0.8.18-dist/summernote.min.js"></script>
    <style>        .col-md-5 {
            font-weight: bold;
        }
    </style>
 <script>
      function setDisable(boo) {

          if(boo)
              $("#summernote").summernote("disable");
          else
               $("#summernote").summernote("enable");

    }
    </script>
}

<div class="container-fluid">
    <h1 class="mt-4">Yeni Hizmet Bölgesi Ekle</h1>
    <ol class="breadcrumb mb-4">
    </ol>
    <div class="row container-fluid">
        <form method="post" action="/Admin/DinamikSayfalar/YeniHizmetBolgesiEkle">
            <div class="form-group row">
                <label for="goruntulenecekAd" class="col-md-5 col-form-label">Hizmet Bölgesinin Adı</label>
                <div class="col-md-7">
                    <input id="goruntulenecekAd" name="goruntulenecekAd"  type="text" aria-describedby="goruntulenecekAdHelpBlock" required="required" class="form-control">
                    <span id="goruntulenecekAdHelpBlock" class="form-text text-muted">Hizmet Bölgesinin adını giriniz.</span>
                </div>
            </div>

            <div class="form-group row">
                <label for="keywords" class="col-md-5 col-form-label">Sayfa keywordleri(Anahtar Kelimeleri)</label>
                <div class="col-md-7">
                    <input id="keywords" name="keywords" type="text" aria-describedby="keywordsHelpBlock" class="form-control" required="required" value="@Model.keywords">
                    <span id="keywordsHelpBlock" class="form-text text-muted">200 harfi geçmeyecek şekilde sayfanın anahtar kelimelerini araya virgül işaretleri koyarak koyabilirsiniz.</span>
                </div>
            </div>
            <div class="form-group row">
                <label for="sayfaAciklamasi" class="col-md-5 col-form-label">Sayfa Açıklaması</label>
                <div class="col-md-7">
                    <input id="sayfaAciklamasi" name="sayfaAciklamasi" type="text" class="form-control" aria-describedby="sayfaAciklamasiHelpBlock" required="required" value="@Model.sayfaAciklamasi">
                    <span id="sayfaAciklamasiHelpBlock" class="form-text text-muted">Sayfanın içeriğini anlatmak için 500 harfi geçmeyecek şekilde açıklama yapabilirsiniz.</span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-5">Otomatik içerik oluşturulsun mu?</label>
                <div class="col-md-7">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input name="defaultMu" id="default_0" type="radio" aria-describedby="defaultHelpBlock" class="custom-control-input" value="true" required="required" onchange="setDisable(true);">
                        <label for="default_0" class="custom-control-label">EVET</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input name="defaultMu" id="default_1" type="radio" aria-describedby="defaultHelpBlock" class="custom-control-input" value="false" checked="checked" required="required" onchange="setDisable(false);">
                        <label for="default_1" class="custom-control-label">HAYIR</label>
                    </div>
                    <span id="defaultHelpBlock" class="form-text text-muted">Eğer sayfanın ismini girdikten sonra diğer içeriklerin otomatik olarak doldurulmasını istiyorsanız EVET'i seçiniz</span>
                </div>
            </div>
            <div class="form-group row" id="icerikDiv">
                <label class="col-md-5 col-form-label" for="icerik">Sayfa İçeriği</label>
                <div class="col-md-7">
                    <textarea id="summernote"  name="icerik" cols="40" rows="8" aria-describedby="icerikHelpBlock" class="form-control" ></textarea>
                    <span id="icerikHelpBlock" class="form-text text-muted">Sayfanın içinde bulunan yazı.</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-5 col-md-7">
                    <button name="submit" type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>

    </div>
</div>

<script>
    $(document).ready(function () {
   $('#summernote').summernote({
        placeholder: 'HTML formatında içerik girebilirsiniz.',
        tabsize: 2,
        height: 240,
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['view', ['fullscreen', 'codeview', 'help']]
        ]
      });
    });
   
</script>