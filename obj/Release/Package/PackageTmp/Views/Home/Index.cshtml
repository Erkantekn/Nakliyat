@model Nakliyat.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Anasayfa";
}

@section header{
    <!-- gallery -->
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/Scripts/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/easing.js"></script>
    <style>
        .carousel-inner > .item > a > img, .carousel-inner > .item > img, .img-responsive, .thumbnail a > img, .thumbnail > img {
            min-width: 100%;
        }
    </style>

}



<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        @{
            int sayac = 0;
            foreach (var item in Model.resimlerV.Where(x => x.ResimKategorileri.KategoriAdı == "anasayfa-slider").ToList())
            {
                if (sayac == 0)
                {
                    <div class="item active">
                        <img src="@item.ResimYolu" alt="@item.ResimTitle" title="@item.ResimTitle">
                        <div class="carousel-caption">
                            <h3>@item.ResimTitle</h3>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src="@item.ResimYolu" alt="@item.ResimTitle" title="@item.ResimTitle">
                        <div class="carousel-caption">
                            <h3>@item.ResimTitle</h3>
                        </div>
                    </div>
                }
                sayac++;
            }

        }


        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div></div>
<!--/.Carousel Wrapper-->
