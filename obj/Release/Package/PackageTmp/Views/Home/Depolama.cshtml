
@{
    ViewBag.Title = "Depolama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="w3-about-us">
    <div>
      
        <div class="w3-headings-all">
            <h3>Depolama</h3>
        </div>

        <div class="w3-about-text">
